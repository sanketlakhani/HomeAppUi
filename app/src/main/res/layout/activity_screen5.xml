<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDF1FA"
    tools:context=".ScreenActivity5">

    <TextView

        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="All User"
        android:textColor="#182C6F"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView

        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_540sdp">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_16ssp"
                android:text="Total 2 active user"
                android:textColor="#A5AABD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/img_8"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_100sdp"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_120sdp">

                <TextView

                    android:textColor="#3B4D84"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="Tom cruise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <TextView

                        android:textSize="@dimen/_11ssp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView

                        android:textColor="#74A3EC"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <Switch

                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:src="@drawable/img_9"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_100sdp"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_120sdp">

                    <TextView

                        android:textColor="#3B4D84"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:text="Chris evens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView

                        android:textSize="@dimen/_11ssp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView

                        android:textColor="#74A3EC"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <Switch

                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>