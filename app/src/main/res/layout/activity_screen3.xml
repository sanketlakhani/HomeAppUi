<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1FA"
    android:orientation="vertical"
    tools:context=".ScreenActivity3">

    <TextView

        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Services"
        android:textColor="#182C6F"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp">

        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:scrollbars="none">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp">

                    <androidx.cardview.widget.CardView

                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#E4ECFF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout

                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:src="@drawable/ic_baseline_cloud_24"
                                android:tint="#4C8CF6" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#E4ECFF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout

                            android:id="@+id/linearlight"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp">

                            <ImageView

                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="44dp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:src="@drawable/ic_baseline_highlight_24"
                                android:tint="#4C8CF6" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#3980F6"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout

                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp">

                            <ImageView

                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:src="@drawable/ic_baseline_library_music_24"
                                android:tint="@color/white" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#E4ECFF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout

                            android:id="@+id/linearelecticity"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp">

                            <ImageView

                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:src="@drawable/ic_baseline_electrical_services_24"
                                android:tint="#4C8CF6" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="#E4ECFF"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout

                            android:id="@+id/linearactivity"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp">

                            <ImageView

                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:src="@drawable/ic_baseline_more_horiz_24"
                                android:tint="#4C8CF6" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>